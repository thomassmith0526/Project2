<h2> Add Job</h2>

<form class="add-job">
  <div class="form-group">
    <label for="client_id">Client ID</label>
    <select class="form-select" id="client_id" name="client">
      {{#each clients as |client|}}
      <option value="{{client.id}}">{{client.id}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="employee_id">Employee ID</label>
    <select class="'form-select" id="'employee_id" name="employee"></select>
    {{#each employees as |employee|}}
    <option value="{{employee.id}}">{{employee.id}}</option>
    {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="task">Task:</label>
    <select class="form-select" id="task" name="task">
      {{#each tasks as |task|}}
        <option value="{{task.name}}">{{task.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    <input class="from-group" type="text" id="date" placeholder="MM/DD/YY" />
  </div>

  <div class="form-group">
    <label for="comments">Comments</label>
    <input class="from-group" type="text" id="comments" placeholder="gate code, dogs, type of flowers." />
  </div>

